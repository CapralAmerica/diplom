{% extends 'layouts/master.html.twig' %}
{% block title %} Цены и услуги {% endblock %}
{% block styles %}
    <link href="{{ asset('css/sign_in.css') }}" rel="stylesheet">
{% endblock %}
{% block header %} {% include 'parts/header.html.twig' %} {% endblock %}
{% block content %}
        <div class="col-lg-2"></div>
        <div class="col-lg-8 mt-3 mb-3">
            {% for service in services %}
            <div class="accordion mt-2" id="accordionEx" role="tablist" aria-multiselectable="true">
                <div class="card">
                    <div class="card-header" role="tab" id="headingOne">
                        <a data-toggle="collapse" href="#{{ service.shortName }}" aria-expanded="false"
                           aria-controls="collapseOne">
                            <h5 class="mb-0">
                                {{ service.shortName }} <i class="fa fa-angle-down rotate-icon"></i>
                            </h5>
                        </a>
                    </div>
                    <div id="{{ service.shortName }}" class="collapse show" role="tabpanel" aria-labelledby="headingOne"
                         data-parent="#accordionEx" >
                        <div class="card-body">
                            <h5 class="text-center">{{ service.fullName }}</h5>
                            <p>{{ service.description }}</p>
                            <h5 class="test-right">Цена: {{ service.price }} грн</h5>
                        </div>
                    </div>
                </div>
             </div>
             {% endfor %}
        </div>
        <div class="col-lg-2"></div>
{% endblock %}
{% block footer %} {% include 'parts/footer.html.twig' %} {% endblock %}