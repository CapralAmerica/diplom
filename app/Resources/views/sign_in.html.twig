{% extends 'layouts/master.html.twig' %}
{% block title %} Войти {% endblock %}
{% block styles %}
    <link href="{{ asset('css/sign_in.css') }}" rel="stylesheet">
    <style>
        input:invalid {
            border: 1px solid red !important;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="col-lg-4"></div>
    <div class="col-lg-7">
        <div class="col-lg-3"></div>
        <div class="card col-lg-6 mt-3">
            <div class="card-body">
                <form method="POST" action="{{ path('login') }}">
                    <p class="h4 text-center mb-4">Авторизация</p>
                    <div class="md-form">
                        <i class="fa fa-user prefix grey-text"></i>
                        <input type="text" id="materialFormLoginEmailEx" name="username" class="form-control" required>
                        <label for="materialFormLoginEmailEx">Имя пользователя</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix grey-text"></i>
                        <input type="password" id="materialFormLoginPasswordEx"  name="password" class="form-control" required>
                        <label for="materialFormLoginPasswordEx">Пароль</label>
                    </div>
                    <div class="text-center mt-4">
                        <button class="btn btn-default" type="submit">Войти</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>

{% endblock %}
